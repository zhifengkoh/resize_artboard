{
  "name": "Resize Artboard",
  "description": "Resizes artboards to fit their content",
  "author": "Zhifeng Koh",
  "version": "1.1.1",
  "identifier": "com.zhifengkoh.sketch.resize-artboard",
  "updateURL": "https://zhifengkoh.github.io/resize_artboard",
  "compatibleVersion": "3.4.1",
  "bundleVersion": 1,
  "commands": [
    {
      "name": "Fit Selected Artboards to Content",
      "identifier": "fit_selected",
      "shortcut": "ctrl shift z",
      "script": "resize_artboard.sketchscript",
      "handler": "onRun"
    },
    {
      "name": "Resize All Artboards on Current Page",
      "identifier": "fit_all_on_page",
      "shortcut": "ctrl cmd shift z",
      "script": "fit_all_on_page.sketchscript",
      "handler": "onRun"
    }
  ],
  "menu": {
    "items": [
      "fit_selected",
      "fit_all_on_page"
    ],
    "isRoot": "true"
  }
}
